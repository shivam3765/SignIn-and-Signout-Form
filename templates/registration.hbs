<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link rel="stylesheet" href="style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Philosopher:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</head>
<body>
    <section class="main">

        <div class="mainContainer">


            <div class="content">
                <h1 class="heading"><span class="spanHeading"><span id="text">Welcome!</span><hr class="hr"></span></h1>
                <p class="tegline">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam iure sequi tempore, aut voluptatum laudantium ea eum reprehenderit, deleniti voluptatibus eligendi, saepe facilis impedit quae? Animi, saepe doloremque? Odio, consequuntur.</p>
                <button class="contentBtn">Learn More</button>
            </div>

{{!-- --------------  Sign in Form  --------------------- --}}
         <div class="form__container">
            <form action="/registration" method="post">
            <div class="form">
                <h1 class="formHeading">Sign Up</h1>
                <div class="formLabels">
                    <div class="labelAndInputes">
                        <label class="labels">First Name</label>
                        <input class="inputs" type="text" placeholder="First Name" name="firstName" required>

                        <label class="labels">Last Name</label>
                        <input class="inputs" type="text" placeholder="Last Name" name="lastName" required>

                        <label class="labels">Email</label>
                        <input class="inputs" type="email" placeholder="Email Id" name="Email" required>

                        <label class="labels">Password</label>
                        <input class="inputs" type="text" placeholder="Password" name="Password" required>

                        <label class="labels">Phone</label>
                        <input class="inputs" type="tel" placeholder="Phone Number" name="Phone" required>
                    </div>
                    <div class="radioInput">
                        <input type="radio" id="radio" name="Radio">
                        <label>Male</label>
                        <input type="radio" id="radio" name="Radio">
                        <label>Female</label>
                    </div>
                    <div class="formBtn">
                        <input class="inpBtn" type="submit" name="submit">
                        <a class="inpBtn login">login</a>

                    </div>
                </div>
            </div>
            </form>

{{!-- -----------  Login Form  -------------------- --}}
            <form action="/" method="post">
            <div class="loginForm">
                <h1 class="formHeading">Sign In</h1>
                <div class="formLabels">
                    <div class="labelAndInputes">
                        <label class="labels">Email</label>
                        <input class="inputs" type="email" name="loginEmail" placeholder="Email Id">

                        <label class="labels">Password</label>
                        <input class="inputs" type="text" name="loginPassword" placeholder="Password">
                    </div>
                    <div class="forgetPass">
                        <a class="link" href="#">Forgot Password?</a>
                    </div>
                    <div class="icons">
                        <a href="#"><ion-icon class="ion" name="logo-google"></ion-icon></a>
                        <a href="#"><ion-icon class="ion" name="logo-facebook"></ion-icon></a>
                        <a href="#"><ion-icon class="ion" name="logo-twitter"></ion-icon></a>
                    </div>
                    <div class="formBtn">
                        <input class="inpBtn" type="submit" value="LogIn" name="submit">
                        <a class="inpBtn sigin">singup</a>
                    </div>
                </div>
            </div>
                
            </form>

         </div>

        </div>
    </section>
</body>
<script>

    // -----------  Under line Animation  --------------

    const mC= document.querySelector('.mainContainer');
    const hr= document.querySelector('.hr');

    mC.addEventListener('mouseover',callme );
  
    function callme(){
        hr.classList.add('border');
    }
    mC.addEventListener('mouseout',dontcallme );
  

    function dontcallme(){
        hr.classList.remove('border');
    }


    
    // ? -----------  Swap Card  --------------

    const login = document.querySelector('.login');
    const sigin = document.querySelector('.sigin');
    const form = document.querySelector('.form');
    const loginform = document.querySelector('.loginForm');

    login.addEventListener('click', function(){
        console.log('go to login');
        form.style.transform = 'rotateY(180deg)';
        loginform.style.transform = 'rotateY(360deg)';
        loginform.style.zIndex = 1;
    })
    sigin.addEventListener('click', function(){
        console.log('go to signin');

        form.style.transform = 'rotateY(0deg)';
        loginform.style.transform = 'rotateY(180deg)';
        loginform.style.zIndex = -1;
    });


</script>
</html>